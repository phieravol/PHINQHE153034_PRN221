@page
@model EduTech.Pages.Login.IndexModel
@{
}
<section class="vh-100" style="background-color: #508bfc;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <h3 class="mb-5">Đăng nhập</h3>

                        <form method="post">
                            <div class="form-outline mb-4">
                                <input type="email" asp-for="User.Email" class="form-control form-control-lg" />
                                <label class="form-label" asp-for="User.Email">Email</label>
                                <span asp-validation-for="User.Email" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-4">
                                <input type="password" asp-for="User.Password" class="form-control form-control-lg" />
                                <label class="form-label" asp-for="User.Password">Mật khẩu</label>
                                <span asp-validation-for="User.Password" class="text-danger"></span>
                            </div>

                            <!-- Checkbox -->
                            <div class="form-check d-flex justify-content-start mb-4">
                                <input class="form-check-input" type="checkbox" value="" id="form1Example3" />
                                <label class="form-check-label" for="form1Example3"> Lưu mật khẩu?</label>
                            </div>

                            <button class="btn btn-primary btn-lg btn-block" type="submit">Đăng nhập</button>
                        </form>
                        

                        <hr class="my-4">

                        <button class="btn btn-lg btn-block btn-primary" style="background-color: #dd4b39;"
                                type="submit">
                            <i class="fab fa-google me-2"></i> Đăng nhập bằng google
                        </button>
                        <button class="btn btn-lg btn-block btn-primary mb-2" style="background-color: #3b5998;"
                                type="submit">
                            <i class="fab fa-facebook-f me-2"></i>Đăng nhập bằng facebook
                        </button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
